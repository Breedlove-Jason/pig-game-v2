daemon off;

worker_processes 1;

events {
    worker_connections 1024;
}

http {
    server {
        listen <%= ENV['PORT'] %>;
        server_name _;
        root /app/public; # Adjust this if your static files are in a different directory

        location / {
            index index.html index.htm;
            try_files $uri $uri/ =404;
        }
    }
}
